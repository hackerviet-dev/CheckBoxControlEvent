<Window x:Class="CheckBoxControlEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxControlEvent"
        mc:Ignorable="d"
        Title="CheckBox Sự kiện" Height="450" Width="800">

    <StackPanel Margin="10">
        <Label>Bạn thích những gì?</Label>

        <CheckBox Name="chkToanBo"
                  Content="Thích toàn bộ hoạt động"
                  Checked="ChkToanBo_Checked"
                  Unchecked="ChkToanBo_Unchecked" />

        <StackPanel Margin="20,0,0,0">
            <CheckBox Name="chkCongNghe"
                      Content="Thích nghiên cứu công nghệ"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged" />

            <CheckBox Name="chkDuLich"
                      Content="Thích đi du lịch"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged" />

            <CheckBox Name="chkDaBong"
                      Content="Thích đá bóng"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged" />

            <CheckBox Name="chkXemPhim"
                      Content="Thích xem phim"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged" />
        </StackPanel>
    </StackPanel>
</Window>
